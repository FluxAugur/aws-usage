    {
      "Sid": "UserViewsLimitedDomainInfo",
      "Effect": "Allow",
      "Action": [
        "route53:Get*",
        "route53:List*",
        "route53:Test*",
        "route53resolver:Get*",
        "route53resolver:List*",
        "route53domains:Get*",
        "route53domains:List*",
        "route53domains:Check*",
        "route53domains:View*"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "UserCreatesOrAltersUsersOnlyWithBoundary",
      "Effect": "Allow",
      "Action": [
        "iam:CreateUser",
        "iam:DeleteUserPolicy",
        "iam:AttachUserPolicy",
        "iam:DetachUserPolicy",
        "iam:PutUserPermissionsBoundary"
      ],
      "Resource": [
        "*"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PermissionsBoundary": "arn:aws:iam::fluxaugur:policy/permissions-boundary/FluxAugurBoundaries"
        }
      }
    },
    {
      "Sid": "UserViewsAndManagesUserPoliciesAccessKeysGroupsAndMFA",
      "Effect": "Allow",
      "Action": [
        "iam:Get*",
        "iam:List*",
        "iam:Generate*",
        "iam:Simulate*",
        "iam:*Group*",
        "iam:*MFA*",
        "iam:UpdateUser",
        "iam:CreateAccessKey",
        "iam:CreateLoginProfile",
        "iam:CreatePolicy",
        "iam:DeletePolicy",
        "iam:DeletePolicyVersion",
        "iam:PutUserPolicy",
        "iam:SetDefaultPolicyVersion"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "UserCanNotEditOrganizationOrOwnBoundary",
      "Effect": "Deny",
      "Action": [
        "iam:CreatePolicyVersion",
        "iam:DeletePolicy",
        "iam:DeletePolicyVersion",
        "iam:SetDefaultPolicyVersion"
      ],
      "Resource": [
        "arn:aws:iam::fluxaugur:policy/permissions-boundary/FluxAugurBoundaries",
        "arn:aws:iam::fluxaugur:policy/permissions-boundary/ManagerBoundaries"
      ]
    },
    {
      "Sid": "UserCanNotRemoveUsersBoundary",
      "Effect": "Deny",
      "Action": [
        "iam:DeleteUserPermissionsBoundary"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}
